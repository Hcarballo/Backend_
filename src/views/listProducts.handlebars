<main>
    <h2>Listado de Productos</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Código</th>
                 <th scope="col">Imagen</th>
                <th scope="col">Nombre</th>
                <th scope="col">Uva</th>
                <th scope="col">Bodega</th>
                <th scope="col">Precio</th>
                <th scope="col">Categoría</th>
                <th scope="col">Stock</th>
                <th scope="col">Usuario</th>
                <th scope="col">    </th>
                <th scope="col">    </th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <th scope="row">{{@index}}</th>
                <td>{{this.codigo}}</td>
                <td><img src="{{this.imagen}}" alt="{{this.name}}" style="width: 50px; height: 50px;"></td>
                <td>{{this.nombre}}</td>
                <td>{{this.uva}}</td>
                <td>{{this.bodega}}</td>
                <td>{{this.precio}}</td>
                <td>{{this.categoria}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.ownerId}}</td>
                <td>
                    <form action='/updateproduct/{{this._id}}' method="POST" class="update-form">
                        <button class="btn btn-info btn-sm update-btn">Editar</button>
                    </form>
                </td>
                <td>
                    <form action="/api/product/deleteproduct/{{this._id}}" method="POST" class="delete-form">
                        <button class="btn btn-danger btn-sm delete-btn">Eliminar</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</main>
