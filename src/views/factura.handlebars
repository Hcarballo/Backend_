<main>
    <div class="invoice-header">
        <h3>Factura de Compra</h3>
        <h6>ID de Factura: {{cid}}</h6>
    </div>

    <div class="invoice-details">
        <h6>Fecha: {{date}}</h6>
        <h6>Cliente: {{customer}}</h6>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Producto</th>
                <th scope="col">Cantidad</th>
                <th scope="col">Precio U</th>
                <th scope="col">Subtotal</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <th scope="row">{{@index}}</th>
                <td>{{name}}</td>
                <td>{{quantity}}</td>
                <td>${{unitprice}}</td>
                <td>${{subtotal}}</td>
            </tr>
            {{/each}}
            <tr>
                <td colspan="4" class="text-right"><strong>Total:</strong></td>
                <td><strong>${{total}}</strong></td>
            </tr>
        </tbody>
    </table>    
    <button class="btn btn-success env-correo">Enviar Correo</button>
    <button class="btn btn-info volver">Volver</button>    
</main>

<script src="/js/scriptCart.js"></script>