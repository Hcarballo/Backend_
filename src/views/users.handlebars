<main>
    <h2>Listado Usuarios</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Edad</th>
                <th scope="col">Email</th>
                <th scope="col">Rol</th>
                <th scope="col">Acciones</th>
                <th scope="col"> </th>
                <th scope="col">Premium</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <th scope="row">{{@index}}</th>
                <td>{{this.first_name}}</td>
                <td>{{this.last_name}}</td>
                <td>{{this.age}}</td>
                <td>{{this.email}}</td>
                <td>{{this.role}}</td>
                <td>
                    <form action='/updateuser/{{this._id}}' method="POST" class="update-form">
                        <button class="btn btn-info btn-sm update-btn">Editar</button>
                    </form>
                </td>
                <td>
                    <form action="/api/users/deleteuser/{{this._id}}" method="POST" class="delete-form">
                        <button class="btn btn-danger btn-sm delete-btn">Eliminar</button>
                    </form>
                </td>
                <td>
                    <input type="checkbox" id="checkPremium" name="checkPremium" {{#if this.checkPremium}}checked{{/if}} onclick="updatePremium('{{this._id}}', this.checked)">
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</main>


<script src="/js/scriptUser.js"></script>