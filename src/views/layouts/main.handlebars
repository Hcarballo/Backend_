                <li class="nav-item"></li>
                <a class="nav-link" href="users">Usuarios</a>
                </li>
                {{/if}}

            </ul>
        </div>
        <div class="cart-container">
            <a href="/cart">
                <img src="/image/products/carrito.jpg" alt="Carrito de compras" class="cart-button">
                <span class="cart-count">{{dataInit.cartitem}}</span>
            </a>
            <span>-</span>
            <h4 class="cart-total">${{dataInit.total}}</h4>
        </div>
    </nav>
