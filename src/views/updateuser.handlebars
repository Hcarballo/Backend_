<main class="main_updateuser">
    <h3>Editar Usuario</h3>
    <form action="/api/users/updateuser" method="POST" class="form_updateuser" enctype="multipart/form-data">
        <input type="hidden" name="uid" id="uid" value="{{Id}}">
        <div>
            <label for="first_name">Nombre:</label>
            <input type="text" id="first_name" name="first_name" value="{{Nombre}}" required>
        </div>
        <div>
            <label for="last_name">Apellido:</label>
            <input type="text" id="last_name" name="last_name" value="{{Apellido}}" required>
        </div>
        <div>
            <label for="date_born">Fecha de Nacimiento:</label>
            <input type="date" id="date_born" name="date_born" value="{{Fecha_Nac}}">
        </div>
        <div>
            <label for="foto_perfil">Foto de Perfil:</label>
            <img src="{{Foto_Perfil_URL}}" alt="Foto de Perfil" id="current_foto_perfil" style="width: 150px; height: 150px; object-fit: cover;">
            <input type="file" id="foto_perfil" name="foto_perfil">
        </div>
        <div>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" value="{{Email}}" required>
        </div>
        <div>
            <label for="role">Role:</label>
            <input type="text" id="role" name="role" value="{{Role}}" required>
        </div>
        <div>
            <label for="checkPremium">Premium:</label>
            <input type="checkbox" id="checkPremium" name="checkPremium" {{#if CheckPremium}}checked{{/if}}>
        </div>
        <button type="submit">Guardar Cambios</button>
    </form>
</main>
