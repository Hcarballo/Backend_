<main>
    <h3>Detalle Compra</h3>
    <h4># Factura: {{id}}</h4>
    <h4>    Total: ${{total}}</h4>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">        </th>
                <th scope="col">Producto</th>
                <th scope="col">Cantidad</th>
                <th scope="col">Precio U</th>
                <th scope="col">Subtotal </th>
                <th scope="col"> </th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <th scope="row">{{@index}}</th>
                <td><img src="{{this.image}}" alt="{{this.name}}" style="width: 50px; height: 50px;"></td>
                <td>{{this.name}}</td>
                <td>{{this.quantity}}</td>
                <td>{{this.unitprice}}</td>
                <td>{{this.subtotal}}</td>
                <td>
                    <button class="btn btn-danger btn-sm del-btn" data-pid="{{this.product}}">Eliminar</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{#if products}}
    <button class="btn btn-success fin-compra">Finalizar Compra</button>
    {{/if}}
    <button class="btn btn-info cont-compra">Continuar Compra</button>
</main>


<script src="/js/scriptCart.js"></script>